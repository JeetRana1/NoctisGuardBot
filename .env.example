# Copy to .env and fill in values. Do NOT commit your real .env file.
# Local development only; production env vars should be set in your host (e.g., Vercel project settings)

# Bot token (required if you run the Discord bot locally)
DISCORD_TOKEN=your_bot_token_here

# OAuth2 app credentials (required for the web dashboard OAuth flows)
CLIENT_ID=your_discord_application_client_id
CLIENT_SECRET=your_discord_application_client_secret

# (Optional) Set this if you need a fixed redirect URL for OAuth. Defaults to dynamic host-based redirect: https://<host>/api/callback
OAUTH_REDIRECT=https://your-deployment.example.com/api/callback

# Session secret for express-session
SESSION_SECRET=replace_this_in_prod

# Port for local web server
PORT=3000
